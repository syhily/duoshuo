{
  "name": "duoshuo",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "duoshuo",
    "discus",
    "comment",
    "hono",
    "react"
  ],
  "homepage": "https://comment.yufan.me",
  "bugs": {
    "url": "https://github.com/syhily/duoshuo/issues",
    "email": "syhily@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syhily/duoshuo.git"
  },
  "license": "MIT",
  "author": {
    "name": "Yufan Sheng",
    "email": "syhily@gmail.com",
    "url": "https://yufan.me"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "rollup -c rollup.config.ts --configPlugin typescript",
    "db:check": "drizzle-kit check",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "dev": "vite",
    "lint": "biome check --apply --use-server . && prettier . --write",
    "prepare": "husky",
    "start": "NODE_ENV=production node -r dotenv-flow/config dist/server.js",
    "test": "NODE_ENV=test vitest run",
    "test:db": "NODE_ENV=test drizzle-kit migrate"
  },
  "lint-staged": {
    "**/*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@hono/zod-validator": "^0.2.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@t3-oss/env-core": "^0.10.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.3.5",
    "pg": "^8.11.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@hono/vite-dev-server": "^0.12.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.12.11",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "drizzle-kit": "^0.21.1",
    "glob": "^10.3.15",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rollup": "^4.17.2",
    "rollup-plugin-cleandir": "^2.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
